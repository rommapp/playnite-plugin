<UserControl x:Class="RomM.Views.DownloadQueueSidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RomM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="DownloadItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Margin" Value="0,4,0,2"/>
        </Style>
        
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        
        <Style x:Key="GameNameStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PanelBackgroundBrush}" 
                BorderBrush="{DynamicResource ControlBorderBrush}" 
                BorderThickness="0,0,0,1" Padding="8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Download Queue" FontWeight="Bold" FontSize="14" 
                          Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding DownloadQueue.Count, StringFormat='({0})'}" 
                          FontSize="12" Foreground="{DynamicResource TextBrush}" 
                          VerticalAlignment="Center" Margin="4,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Download List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding DownloadQueue}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource DownloadItemStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Game Name and Remove Button -->
                                <Grid Grid.Row="0">
                                    <TextBlock Text="{Binding GameName}" Style="{StaticResource GameNameStyle}"/>
                                    <Button Content="Ã—" FontSize="16" FontWeight="Bold" 
                                           HorizontalAlignment="Right" VerticalAlignment="Top"
                                           Width="20" Height="20" Padding="0"
                                           Background="Transparent" BorderThickness="0"
                                           Foreground="{DynamicResource TextBrush}"
                                           Command="{Binding DataContext.RemoveDownloadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}"
                                           Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}"/>
                                </Grid>
                                
                                <!-- Progress Bar -->
                                <ProgressBar Grid.Row="1" Value="{Binding Progress}" 
                                           Style="{StaticResource ProgressBarStyle}"
                                           Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                
                                <!-- Status Text -->
                                <TextBlock Grid.Row="2" Text="{Binding Status}" Style="{StaticResource StatusTextStyle}"/>
                                
                                <!-- Details (Speed, Size, etc.) -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="{Binding FormattedDownloaded}" Style="{StaticResource StatusTextStyle}"/>
                                    <TextBlock Text="/" Style="{StaticResource StatusTextStyle}" Margin="2,0"/>
                                    <TextBlock Text="{Binding FormattedSize}" Style="{StaticResource StatusTextStyle}"/>
                                    <TextBlock Text=" - " Style="{StaticResource StatusTextStyle}" 
                                             Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding FormattedSpeed}" Style="{StaticResource StatusTextStyle}"
                                             Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                                
                                <!-- Error Message -->
                                <TextBlock Grid.Row="3" Text="{Binding ErrorMessage}" 
                                         Style="{StaticResource StatusTextStyle}"
                                         Foreground="Red" TextWrapping="Wrap"
                                         Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Footer with Action Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource PanelBackgroundBrush}" 
                BorderBrush="{DynamicResource ControlBorderBrush}" 
                BorderThickness="0,1,0,0" Padding="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Clear Completed" Margin="0,0,4,0" Padding="8,4"
                       Command="{Binding ClearCompletedCommand}"
                       Background="{DynamicResource ButtonBackgroundBrush}"
                       Foreground="{DynamicResource ButtonTextBrush}"
                       BorderBrush="{DynamicResource ControlBorderBrush}"/>
                <Button Content="Clear All" Padding="8,4"
                       Command="{Binding ClearAllCommand}"
                       Background="{DynamicResource ButtonBackgroundBrush}"
                       Foreground="{DynamicResource ButtonTextBrush}"
                       BorderBrush="{DynamicResource ControlBorderBrush}"/>
            </StackPanel>
        </Border>
        
        <!-- Empty State -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Visibility="{Binding DownloadQueue.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=Invert}">
            <TextBlock Text="No downloads in queue" 
                      FontSize="14" Foreground="{DynamicResource TextBrush}" 
                      HorizontalAlignment="Center"/>
            <TextBlock Text="Start downloading games to see them here" 
                      FontSize="11" Foreground="{DynamicResource TextBrush}" 
                      HorizontalAlignment="Center" Margin="0,4,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
